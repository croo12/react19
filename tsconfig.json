{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "server.ts"],
	"ts-node": {
		"transpileOnly": true,
		"require": ["tsconfig-paths/register"],
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
